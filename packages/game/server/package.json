{
  "name": "@reapers/game-server",
  "version": "0.0.1",
  "author": "flaforgue <florian.laforgue@gmail.com>",
  "homepage": "https://bitbucket.org/FloLfg/reapers/packages/game-server#readme",
  "license": "ISC",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/FloLfg/reapers.git"
  },
  "scripts": {
    "build": "rm -Rf ./dist && tsc",
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "start": "yarn build && node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^3.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.27",
    "@types/socket.io": "^2.1.13",
    "@types/uuid": "^8.3.0"
  }
}
